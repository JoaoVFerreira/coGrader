{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\" --names \"API,WORKER\" --prefix-colors \"blue,green\"",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:worker\" --names \"API,WORKER\" --prefix-colors \"blue,green\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "Jo√£o Ferreira",
  "license": "ISC",
  "description": "Backend for coGrader",
  "dependencies": {
    "axios": "^1.6.5",
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-winston": "^3.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
